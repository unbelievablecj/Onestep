<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#ffff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="相关地点："
                android:gravity="center_vertical"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/otherStrategy_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="福州大学"
                android:textColor="#000000"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBBBBB">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="标签："
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/otherStrategy_label"
                android:maxLines="1"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="60dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="风景/城市/跟团"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:textSize="18sp"
                android:text="路程距离：" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/otherStrategy_distance"

                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textSize="18sp"
                android:text="199km"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#fff">

            <com.amap.api.maps.MapView
                android:id="@+id/strategy_map"
                android:layout_width="wrap_content"
                android:layout_height="380dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:text="评论  "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="2"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/shoucan"/>
            <ImageView
                android:id="@+id/dianzan"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/dianzan1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/dianzan"
                android:layout_marginLeft="40dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="2"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/guestlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

        </ListView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>