<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SettingsActivity">
    <com.example.administrator.util.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.administrator.util.TitleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/changePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_border"
            android:text="    修改密码"
            android:textSize="18dp"
            android:gravity="center_vertical"


    />
       <Button
           android:id="@+id/aboutYiBu"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/bg_border"
           android:text="     关于一步"
           android:textSize="18dp"
           android:gravity="center_vertical"

           />
       <Button
           android:id="@+id/outLogin"
           android:layout_marginTop="120dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/bg_border"
           android:text="退出登录"
           android:textSize="18dp"
           android:textColor="#E66D6D"

           />


</LinearLayout>

</android.support.constraint.ConstraintLayout>